{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*":            ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*":      ["src/models/*"],
      "@services/*":    ["src/services/*"],
      "@views/*":       ["src/views/*"],
      "@components/*":  ["src/components/*"],
      "@types/*":       ["src/types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
